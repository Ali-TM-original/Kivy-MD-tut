<Mylayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: input_bar
            text: "0"
            halign: "right"
            font_size: 50
            size_hint: (1,.15)

        # for buttons
        GridLayout:
            cols:4
            rows:5

            Button:
                size_hint:(.2,.2)
                font_size: 32
                text: "%"
                on_press: root.percent()

            Button:
                size_hint:(.2,.2)
                font_size: 32
                text: "<--"
                on_press: root.test_delete()

            Button:
                size_hint:(.2,.2)
                font_size: 32
                text: "C"
                on_press: root.clear()

            Button:
                size_hint:(.2,.2)
                font_size: 32
                text: "/"
                on_press: root.division()

            Button:
                size_hint:(.2,.2)
                font_size: 32
                text: "7"
                background_color: (128/255,128/255,128/255,1)
                on_press: root.button_press(7)

            Button:
                size_hint:(.2,.2)
                font_size: 32
                text: "8"
                background_color: (128/255,128/255,128/255,1)
                on_press: root.button_press(8)

            Button:
                size_hint:(.2,.2)
                font_size: 32
                text: "9"
                background_color: (128/255,128/255,128/255,1)
                on_press: root.button_press(9)

            Button:
                size_hint:(.2,.2)
                font_size: 32
                text: "X"
                on_press: root.multiplication()


            Button:
                size_hint:(.2,.2)
                font_size: 32
                text: "4"
                background_color: (128/255,128/255,128/255,1)
                on_press: root.button_press(4)

            Button:
                size_hint:(.2,.2)
                font_size: 32
                text: "5"
                background_color: (128/255,128/255,128/255,1)
                on_press: root.button_press(5)

            Button:
                size_hint:(.2,.2)
                font_size: 32
                text: "6"
                background_color: (128/255,128/255,128/255,1)
                on_press: root.button_press(6)

            Button:
                size_hint:(.2,.2)
                font_size: 32
                text: "-"
                on_press: root.subtraction()

            Button:
                size_hint:(.2,.2)
                font_size: 32
                text: "1"
                background_color: (128/255,128/255,128/255,1)
                on_press: root.button_press(1)

            Button:
                size_hint:(.2,.2)
                font_size: 32
                text: "2"
                background_color: (128/255,128/255,128/255,1)
                on_press: root.button_press(2)

            Button:
                size_hint:(.2,.2)
                font_size: 32
                text: "3"
                background_color: (128/255,128/255,128/255,1)
                on_press: root.button_press(3)

            Button:
                size_hint:(.2,.2)
                font_size: 32
                text: "+"
                on_press: root.add()

            Button:
                size_hint:(.2,.2)
                font_size: 32
                text: "+/-"
                background_color: (128/255,128/255,128/255,1)
                on_press: root.negatize()

            Button:
                size_hint:(.2,.2)
                font_size: 32
                text: "0"
                background_color: (128/255,128/255,128/255,1)
                on_press: root.button_press(0)

            Button:
                size_hint:(.2,.2)
                font_size: 32
                text: "."
                background_color: (128/255,128/255,128/255,1)
                on_press: root.decimal()

            Button:
                size_hint:(.2,.2)
                font_size: 32
                text: "="
                on_press: root.evaluate()
